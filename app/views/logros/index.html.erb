<div class="border-list-div" style="overflow: scroll;">
	<h1 style="width: 330px;"> Listado de Logros </h1>
	<%= form_for(@l) do |f| %>	
	<table class="table">
		<thead>
			<tr>
				<th style="font-size:18px"> Etiqueta </th>
				<th style="font-size:18px"> Puntos necesarios </th>
				<th style="font-size:18px"> Opciones </th>
			</tr>
		</thead>
		<tbody>
			<% logros = Logro.all.order(:puntosMin) %>
			<% logros.each do |l| %>
			<tr>
				<td style="font-size:18px"> <%= l.etiqueta %> </td>
				<td style="font-size:18px"> <%= l.puntosMin %> </td>
				<td style="font-size:18px; min-width: 170px">
					<%= link_to "Editar", edit_logro_path(l), class: 'btn btn-primary btn-md' %>
					<%= link_to "Eliminar", l, method: :delete , data: {confirm: '¿Esta seguro de eliminar este logro?'}, class: 'btn btn-danger btn-md' %>		
				</td>
			</tr>
			<% end %>

			<% if logros.size == 0 %>
			<tr> <td colspan="3"> <p style="font-size: 24px; font-style: italic; color: grey; margin-left: 10px; margin-bottom: 20px"> No hay logros!</p> </td> </tr>
			<% end %>
		</tbody>
		<thead>
			<tr>
				<th style="font-size:18px"> Nuevo logro </th>
				<th style="font-size:18px"> </th>
				<th style="font-size:18px"> </th>
			</tr>
		</thead>
		<tbody>
			<td style="font-size:18px">
			<%= f.text_field :etiqueta, required: true, placeholder: 'Ingrese etiqueta' %>
			</td>
			<td style="font-size:18px">
			<%= f.number_field :puntosMin, required: true, placeholder: 'Ingrese puntos' %> 
			</td>
			<td style="font-size:18px">
			<%= f.submit 'Añadir', class: 'btn btn-success' %>
			</td>
		</tbody>
	</table>
	<% end %> <!-- del FORM -->
	<%= link_to "Volver", root_path , class: 'btn btn-info btn-lg' %>
</div>


