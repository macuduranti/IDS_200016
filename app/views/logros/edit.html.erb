<div class="border-form-div">
<h1> Editar logro </h1>
<hr/>
<%= form_for (@logro) do |f| %>
	<%= f.label :etiqueta %>
	<%= f.text_field :etiqueta, required: true, placeholder: 'Ingrese etiqueta' %>
	<hr/>
	<%= f.label :puntosMin %>
	<%= f.text_field :puntosMin, required: true, placeholder: 'Puntos Minimos' %> 
	<hr/>
	<%= f.label :puntosMax %>
	<%= f.text_field :puntosMax, required: true, placeholder: 'Puntos Maximos' %>
	<hr/>
	<%= link_to "Cancelar", logros_path, class: 'btn btn-danger btn-md' %>
	<%= f.submit 'Guardar', data: {confirm: 'Â¿Esta seguro de editar este logro?'}, class: 'btn btn-info btn-md' %>
<% end %> 
</div>