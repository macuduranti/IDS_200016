<div class="container">
<div class="border-list-div">
	<div style="overflow: auto;">
		<% if usuario_signed_in? %>
		<% nom = current_usuario.nombre.capitalize %> 
		<div style="float: left;">
			<h1> Bienvenido <%= nom %>!</h1>
		</div>
		<div style=" float: right; overflow: auto;">
			<%= render 'layouts/logged_user_tag' %>
		</div>
		<% else %>
		<h1> Bienvenido!</h1>
		<% end %>

	</div>

	<h3> Â¿Que desea hacer? </h3>
	<br>
	<br>
		<div style="overflow: auto">
		<div style="float: left;margin-bottom: 4px;">
			<%= link_to "Listado de Gauchadas",gauchadas_path, class: 'btn btn-warning btn-lg' %>
